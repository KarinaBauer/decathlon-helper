= stylesheet_link_tag 'app', media: 'all', 'data-turbolinks-track': 'reload'
= stylesheet_link_tag 'icons', media: 'all', 'data-turbolinks-track': 'reload'

%header
  = link_to '<< В начало', controller: 'start'
  %h1 Генератор бализажей: менеджер иконок

%section
  = form_for @icon, url: {action: :create}, :html => {:id => 'form'} do |f|
    %h2 Загрузка новой иконки:
    %label Выбор файла
    = f.file_field :url
    = f.submit "Отправить", :class => 'button small_button blue_button'
  %ln

  %h2 Загруженные ранее:
  %icons#wrapper
    -@icons.each do |icon|
      %figure
        %aside
          %img{:src => icon[:url]}
        %figcaption
          %a{:onclick => 'this.parentNode.parentNode.remove()', :class => 'button-delete'} [x] Удалить
  %ln