= javascript_include_tag 'edit', 'data-turbolinks-track': 'reload'
- @activityName = 'main'

#wrapper.mdl-layout.mdl-js-layout.mdl-layout--fixed-header
	= render 'layouts/header'

	%header.mdl-layout__header
		.mdl-layout__header-row
			%span.mdl-layout-title Главный экран
			.mdl-layout-spacer
			%nav.mdl-navigation
				//.mdl-layout--large-screen-only
				= link_to "Открыть decathlon.ru", 'http://decathlon.ru', target: :_blank, class: 'mdl-button mdl-js-button mdl-js-ripple-effect'
				= link_to "Каталог иконок", { controller: :icons }, class: 'mdl-button mdl-js-button mdl-js-ripple-effect'
				= link_to "О программе", { action: :about }, class: 'mdl-button mdl-js-button mdl-js-ripple-effect'


	%main.mdl-tabs.mdl-js-tabs.mdl-js-ripple-effect
		.mdl-tabs__tab-bar
			= link_to "Создать бализаж", '#new_balisage', class: 'mdl-tabs__tab is-active'
			= link_to "Создать таблицу сравнения", '#new_compare', class: 'mdl-tabs__tab'


		#new_balisage.mdl-tabs__panel.is-active
			= form_for $url, url: { action: :create, controller: :balisage } do |f|

				%figure#enter_url.mdl-color--light-blue-300.one_item
					.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
						= f.text_field :url, class: 'mdl-textfield__input'
						= label_tag :url, "Ссылка на товар в decathlon:", class: 'mdl-textfield__label'
					%button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored
						далее
						%i.material-icons.right send


		#new_compare.mdl-tabs__panel
			= form_for @item_min, url: { action: :create, controller: :comparsion } do |f|

				.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= text_field_tag :title, nil, class: 'mdl-textfield__input'
					= label_tag :title, "Заголовок таблицы", class: 'mdl-textfield__label'

				#items
				%a.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored.widebtn{ onclick: 'add_item()' }= "добавить товар"
				= button_tag "сгенерировать таблицу", value: 'generate_comparsion', class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored widebtn'