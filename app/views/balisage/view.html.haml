= stylesheet_link_tag 'balisage_design', media: 'all', 'data-turbolinks-track': 'reload'

%body
  %header
    = image_tag('logo_decathlon.png')
  %h1=params[:item][:name]

  %article
    %aside
      %figure
        %div#wrapper
          = image_tag('varranty2.png', class: 'varranty')
          = image_tag(params[:item][:image])
        %figcaption
          %p.articulus= params[:item][:articulus]
          .price
            %p= params[:item][:price]
            %small руб.

    %section
      -params[:item][:avantages].each do |avantage|
        %figure
          = image_tag(avantage[:icon])
          %figcaption
            %strong= avantage[:title]
            %span= avantage[:description]