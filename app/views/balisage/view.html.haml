= stylesheet_link_tag 'print/preview', media: 'all', 'data-turbolinks-track': 'reload'

-case params[:balisage_size]
  -when 'A3'
    = stylesheet_link_tag 'print/A3', media: 'all', 'data-turbolinks-track': 'reload'
  -when 'A4'
    = stylesheet_link_tag 'print/A4', media: 'all', 'data-turbolinks-track': 'reload'
  -when 'A5'
    = stylesheet_link_tag 'print/A5', media: 'all', 'data-turbolinks-track': 'reload'
  -when 'A6'
    = stylesheet_link_tag 'print/A6', media: 'all', 'data-turbolinks-track': 'reload'

%body
  %header
    = image_tag('logo_decathlon.png', class: 'logo')
    %h1=params[:item][:name]

  %article
    %aside
      %figure
        %div#wrapper
          = image_tag('varranty2.png', class: 'varranty')
          = image_tag(params[:item][:image], class: 'item')
        = image_tag('yllw.png', class: 'velosyped_iz_costyley')
        %figcaption
          %p.articulus= params[:item][:articulus]
          .price
            %p= params[:item][:price]
            %small руб.

    %section
      -params[:item][:avantages].each do |avantage|
        %figure
          = image_tag(avantage[:icon])
          %figcaption
            %strong= avantage[:title]
            %span= avantage[:description]